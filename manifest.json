{
  "manifest_version": 3,
  "name": "Picture-in-Picture Plus - Rotate Vertical Shorts",
  "version": "1.0.2",
  "description": "Universal Picture-in-Picture for all web videos with optional rotation for vertical videos",
  "author": "Lucas Hochart",
  "homepage_url": "https://lucashochart.fr",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/pip-state.js",
        "js/pip-utils.js",
        "js/pip-core.js",
        "js/pip-ui.js",
        "js/pip-shortcuts.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
