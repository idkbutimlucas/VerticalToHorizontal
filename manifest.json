{
  "manifest_version": 3,
  "name": "Vertical To Horizontal",
  "version": "4.0.0",
  "description": "Transforme les vid√©os verticales (TikTok, YouTube Shorts) en format horizontal avec Picture-in-Picture",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*",
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*", "https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
